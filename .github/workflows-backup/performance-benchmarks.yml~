name: Integration Tests
on:
  push:
    branches:
      - master

  pull_request:
    paths:
      - 'Sources/**'
      - 'Tests/**' # TODO: set only to test files affecting performance benchmarks?
      - '.github/workflows/performance-benchmarks.yml'

jobs:

  benchmark-with-movies:
    runs-on: macos-11
    steps:
      - uses: actions/checkout@v2
        with:
          repository: 'getsentry/sentry-cocoa-samples'
      - name: Install dev tools
        run: make init
      - name: Benchmark Sentry SDK PR
        run: make integrate-sentry-pr SENTRY_PR_COMMIT_HASH="${{ github.event.pull_request.head.sha }}"
